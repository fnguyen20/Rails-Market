


  <div class="text-center">
    <div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
       <%= devise_error_messages! %> 

      <div class="sign-up-title mb-2">SWYFT</div>
      <h4 class="h3 mb-4 font-weight-normal">Sign up for a free account</h4>


       <%= f.label :email, class: "sr-only" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-signin", placeholder: "Email address" %>

       <%= f.label :username, class: "sr-only" %>
       <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control form-signin", placeholder: "Username" %>

       <%= f.label :first_name, class: "sr-only" %>
       <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control form-signin", placeholder: "First Name" %>

       <%= f.label :last_name, class: "sr-only" %>
       <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control form-signin", placeholder: "Last Name" %>

       <%= f.label :password, class: "sr-only" %>
       <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control form-signin", placeholder: "Password" %>

       <%= f.label :password_confirmation, class: "sr-only" %>
       <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control form-signin", placeholder: "Confirm Password" %>

  <div class="actions"> 
    <%= f.submit "Sign up", class: "btn btn-lg signup-btn btn-block" %>
  </div>
   <p class="mt-5">Already have an account? 
    <%= link_to "Log in", new_session_path(resource_name) %></p>
      <p class="mt-5 mb-3 text-muted">&copy; 2018</p>
 

<% end %>
  </div>

</div>

